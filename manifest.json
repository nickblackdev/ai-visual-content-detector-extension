{
  "manifest_version": 3,
  "name": "AI Visual Content Detector",
  "version": "1.0.0",
  "description": "Detects AI-generated images and videos on web pages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://api.openai.com/*",
    "https://api.replicate.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Visual Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 